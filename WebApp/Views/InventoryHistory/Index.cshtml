@using BIVN.FixedStorage.Services.Common.API.Dto.Inventory;
@{
    ViewBag.Title = Html.Translate("Lịch sử kiểm kê");
    var inventoryNames = ViewBag.InventoryNames as IEnumerable<ListInventoryModel>;
    var inventoryDepartments = ViewBag.InventoryDepartments as IEnumerable<DepartmentInventoryDto>;
    var inventoryLocations = ViewBag.InventoryLocations as IEnumerable<DepartmentInventoryDto>;
}

<link href="./assets/css/InventoryHistory.css" asp-append-version="true" rel="stylesheet" />

<div id="InventoryHistory">
    <form id="InventoryHistory_Search_Option_Form">
        <div class="InventoryHistory_Search_Option">
            <div class="row mb-4 d-flex align-items-end">
                <div class="col ip-form-update box-container" style="width:10%;">
                    <label class="bold_component_label">@Html.Translate("Đợt kiểm kê")</label>
                    @if (inventoryNames != null || inventoryNames.Any())
                        {
                        <select class="custom_select" hidden id="Inventory_Round" name="" multiple placeholder="Chọn đợt kiểm kê" data-search="true" data-silent-initial-value-set="true">
                                @foreach (var item in inventoryNames)
                                {
                                    <option value="@item.InventoryName">@item.InventoryName</option>
                                }
                            </select>
                        }
                </div>
                <div class="col ip-form-update box-container" style="width:10%;">
                    <label class="bold_component_label">@Html.Translate("Phòng ban")</label>
                    <select class="custom_select" hidden
                        id="Inventory_Department"
                        name="Inventory_Department"
                        multiple placeholder="Chọn phòng ban" data-search="true" data-silent-initial-value-set="true">
                        @if (inventoryDepartments != null || inventoryDepartments.Any())
                        {
                            @foreach (var item in inventoryDepartments)
                            {
                                <option value="@item.DepartmentName">@item.DepartmentName</option>
                            }
                        }

                    </select>
                </div>
                <div class="col ip-form-update box-container" style="width:10%;">
                    <label class="bold_component_label">@Html.Translate("Khu vực")</label>
                    <select class="custom_select" hidden
                            id="Inventory_Area"
                            name="Inventory_Area"
                            multiple placeholder="Chọn khu vực" data-search="true" data-silent-initial-value-set="true">
                        @if (inventoryLocations != null || inventoryLocations.Any())
                        {
                            @foreach (var item in inventoryLocations)
                            {
                                <option value="@item.LocationName">@item.LocationName</option>
                            }
                        }
                    </select>
                    
                </div>
                <div class="col ip-form-update box-container" style="width:10%;">
                    <label class="bold_component_label">@Html.Translate("Loại phiếu")</label>
                    <select class="custom_select" hidden id="Inventory_Type"
                            multiple name="select_doctype"
                            placeholder="Chọn nhà máy..." data-search="true" data-silent-initial-value-set="true">
                        <option value="0">A</option>
                        <option value="1">B</option>
                        <option value="2">E</option>
                        <option value="3">C</option>
                    </select>
                </div>
                <div class="col ip-form-update box-container">
                    <label class="bold_component_label">@Html.Translate("Mã phiếu")</label>
                    <input id="History_Inventory_Code" type="text" class="form-control background-color-grey text_ellipsis"
                        placeholder="@Html.Translate("Nhập mã phiếu")..." />
                </div>
                <div class="col ip-form-update box-container">
                    <label class="bold_component_label">@Html.Translate("Mã linh kiện")</label>
                    <input id="History_Inventory_Component_Code" type="text" class="form-control background-color-grey text_ellipsis"
                        placeholder="@Html.Translate("Nhập mã linh kiện")..." />
                </div>
                <div class="col ip-form-update box-container">
                    <label class="bold_component_label">@Html.Translate("Model code")</label>
                    <input id="History_Inventory_Model_Code" type="text" class="form-control background-color-grey text_ellipsis"
                        placeholder="@Html.Translate("Nhập model code")..." />
                </div>
                <div class="col ip-form-update box-container">
                    <label class="bold_component_label">@Html.Translate("Người thao tác")</label>
                    <input id="History_Inventory_Employee" type="text" class="form-control background-color-grey text_ellipsis"
                           placeholder="@Html.Translate("Nhập mã nhân viên")..." />
                </div>
            </div>

            <div class="d-flex justify-content-between mb-3">
                @await Html.PartialAsync("~/Views/Shared/_commonSearch.cshtml")
            </div>
        </div>
    </form>    
    <div class="InventoryHistory_Container bg-white py-2 px-3 mt-4">
        <div class="container_top_table">
            <button class="export_file" id="export-file-listInventoryHistory">
                <div class="InventoryHistory_ExportExcel_Images">
                    <img src="./assets/images/icons/export_excel.png">
                </div>
                <h5>@Html.Translate("Xuất file")</h5>
            </button>
        </div>
        

        <table id="InventoryHistory_DataTable" class="table table-responsive custom_table" style="width:100%">
            <thead>
                <tr class="title_table">
                    <th>STT</th>
                    <th>@Html.Translate("Đợt kiểm kê")</th>
                    <th>@Html.Translate("Phòng ban")</th>
                    <th>@Html.Translate("Khu vực")</th>
                    <th>@Html.Translate("Mã phiếu")</th>
                    <th>@Html.Translate("Mã linh kiện")</th>
                    <th>@Html.Translate("Model code")</th>
                    <th>@Html.Translate("Loại thao tác")</th>
                    <th>@Html.Translate("Change log")</th>
                    <th>@Html.Translate("Người thao tác")</th>
                    <th>@Html.Translate("Thời gian thao tác")</th>
                    <th>@*Xem chi tiết*@</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    @await Html.PartialAsync("~/Views/Shared/Common/_InventoryViewDetailModal.cshtml")
</div>

<script asp-append-version="true" src="./assets/js/InventoryHistory.js"></script>
