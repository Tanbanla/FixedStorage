<!--ChangePassword_ViewDetalUser Modal -->
<div class="modal fade" id="ChangePassword_UpdateUserInfoModal" tabindex="-1" role="dialog" aria-labelledby="ChangePassword_UpdateUserInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @*<h5 class="modal-title" id="ViewDetailUserModalLabel">Thêm mới người dùng</h5>*@
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="Top_UpdateUserInfo">
                    <div class="Image_Top_ViewDetalUser">
                        <img src="./assets/images/logo/brotherLogo_txt_blue.svg" width="176" />
                    </div>
                    <h4 class="text-center modal_header_title py-3 mb-0">@Html.Translate("Thay đổi mật khẩu")</h4>
                </div>
                <form id="ChangePassword_UpdateUserInfo_Form">
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 ip-form-update box-container mb-3">
                            <label class="text_label">Mật khẩu cũ</label>
                            <div class="Password_Login_Container">
                                <input id="OldPassword_ChangePassword_UpdateUserInfo" name="OldPassword_ChangePassword_UpdateUserInfo" type="password" class="form-control background-color-grey" placeholder="Nhập mật khẩu cũ..." />
                                <div class="btn_Password_Login_Image me-md-2">
                                    <img id="OldPassword_ChangePassword_UpdateUserInfo_Show" src="./assets/images/icons/eye.png" />
                                    <img id="OldPassword_ChangePassword_UpdateUserInfo_Hide" style="display:none;" src="./assets/images/icons/hidePass.png" />
                                </div>
                            </div>
                            <span id="OldPassword_ChangePassword_UpdateUserInfo_span" class="error-notification"></span>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 ip-form-update box-container mb-3">
                            <label class="text_label">Mật khẩu mới</label>
                            <div class="Password_Login_Container">
                                <input id="NewPassword_ChangePassword_UpdateUserInfo" name="NewPassword_ChangePassword_UpdateUserInfo" type="password" class="form-control background-color-grey" placeholder="Nhập mật khẩu mới..." />
                                <div class="btn_Password_Login_Image me-md-2">
                                    <img id="NewPassword_ChangePassword_UpdateUserInfo_Show" src="./assets/images/icons/eye.png" />
                                    <img id="NewPassword_ChangePassword_UpdateUserInfo_Hide" style="display:none;" src="./assets/images/icons/hidePass.png" />
                                </div>
                            </div>
                            <span id="NewPassword_ChangePassword_UpdateUserInfo_span" class="error-notification"></span>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 ip-form-update box-container mb-3">
                            <label class="text_label">Xác nhận mật khẩu mới</label>
                            <div class="Password_Login_Container">
                                <input id="ConfirmNewPassword_ChangePassword_UpdateUserInfo" name="ConfirmNewPassword_ChangePassword_UpdateUserInfo" type="password" class="form-control background-color-grey" placeholder="Xác nhận mật khẩu mới..." />
                                <div class="btn_Password_Login_Image me-md-2">
                                    <img id="ConfirmNewPassword_ChangePassword_UpdateUserInfo_Show" src="./assets/images/icons/eye.png" />
                                    <img id="ConfirmNewPassword_ChangePassword_UpdateUserInfo_Hide" style="display:none;" src="./assets/images/icons/hidePass.png" />
                                </div>
                            </div>
                            <span id="ConfirmNewPassword_ChangePassword_UpdateUserInfo_span" class="error-notification"></span>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 ip-form-update box-container">
                            <button id="btnChangePassword_UpdateUserInfo" class="btn_confirm">Xác nhận</button>
                        </div>
                    </div>
                </form>
            </div>            
        </div>
    </div>
</div>

